generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Sesuaikan dengan database yang Anda gunakan
  url      = env("DATABASE_URL")
}

model Series {
  id           Int        @id @default(autoincrement())
  title        String
  banner       String
  slug         String     @unique
  synopsis     String
  status       String[]
  releadted    String?
  censor       Boolean
  rating       Float
  releasedOn   DateTime
  studio       String
  season       String
  preview      String?
  postedBy     String
  updatedOn    DateTime   @updatedAt
  type         String
  deleted      Boolean
  genre        String[]
  episodes     Episode[]
}

model Episode {
  id          Int           @id @default(autoincrement())
  order       Int           
  releasedOn  DateTime
  deleted      Boolean
  updatedOn   DateTime       @updatedAt
  videoServer String[]
  seriesId    Int
  series      Series         @relation(fields: [seriesId], references: [id], onDelete: Cascade)
}
